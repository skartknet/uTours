@using System.Text.Json
@using UTours.Core.ViewComponents

@model TourViewComponentModel

@{

    var firstTour = Model.Tours.FirstOrDefault();

    var jso = new JsonSerializerOptions(JsonSerializerDefaults.Web)
            {
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase,
                WriteIndented = true
            };

    var steps = JsonSerializer.Serialize(firstTour.Steps, jso);
}


<script>
    var tourOptions = null;
    var tourSteps = @Html.Raw(steps);

    const tg = new tourguide.TourGuideClient(tourOptions);
    tg.addSteps(tourSteps);
    tg.start();

</script>